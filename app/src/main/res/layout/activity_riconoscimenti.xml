<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bridge_background"
    android:orientation="horizontal"
    tools:context=".activities.RiconoscimentiActivity">


    <Button
        android:id="@+id/researchgate"
        android:layout_width="165dp"
        android:layout_height="56dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="57dp"
        android:backgroundTint="#20B2AA"
        android:text="ResearchGate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Github1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="147dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@color/black"
        android:text="GitHub"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/researchgate"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="246dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Instagram"
        android:layout_width="143dp"
        android:layout_height="51dp"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#C13584"
        android:text="Instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Linkedin"
        android:layout_width="138dp"
        android:layout_height="52dp"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:backgroundTint="#405DE6"
        android:text="Linkedin"
        app:layout_constraintBottom_toTopOf="@+id/Instagram"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="393dp"
        android:layout_height="149dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/immagine_profilo"
        app:layout_constraintBottom_toTopOf="@+id/Github"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Github"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="189dp"
        android:layout_marginLeft="189dp"
        android:backgroundTint="@color/black"
        android:text="GitHub"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Linkedin"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="246dp"
        android:layout_height="32dp"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/prof"
        app:layout_constraintBottom_toTopOf="@+id/Github1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/indietro"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Instagram" />

</androidx.constraintlayout.widget.ConstraintLayout>